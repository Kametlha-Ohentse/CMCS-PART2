<UserControl x:Class="CMCS_Prototype.LecturerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMCS_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Lecturer Portal - Claim Management" 
                   FontSize="24" FontWeight="Bold" Foreground="#007ACC" 
                   Margin="10,10,10,5"/>

        <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="10,0"/>

        <Border Grid.Row="1" Margin="10,5" Padding="15" Background="White" CornerRadius="8" 
                BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Submit New Claim" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Hours Worked:" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewClaim.HoursWorked, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Width="100" HorizontalAlignment="Left" PreviewTextInput="NumberValidationTextBox"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Month/Year:" VerticalAlignment="Center" Margin="20,5,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding NewClaim.MonthYear, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Width="150" HorizontalAlignment="Left" d:Text="Oct 2025"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Documents:" VerticalAlignment="Center" Margin="0,5,10,5"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Upload Document" Command="{Binding UploadDocumentCommand}" 
                                Padding="8 4" Background="#28A745" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock VerticalAlignment="Center">
                            <Run Text="{Binding NewClaim.Documents.Count}"/>
                            <Run Text="file(s) attached"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Hourly Rate (R):" VerticalAlignment="Center" Margin="20,5,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" 
                               Text="{Binding NewClaim.HourlyRate, StringFormat='C2'}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Notes (Optional):" VerticalAlignment="Top" Margin="0,10,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding NewClaim.AdditionalNotes, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" Height="40" Padding="5"/>

                    <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Right" Margin="10,0,0,0">
                        <TextBlock Text="Total Amount:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NewClaim.TotalAmount, StringFormat='C2'}" 
                                   FontSize="16" FontWeight="Bold" Foreground="#007ACC"/>
                    </StackPanel>
                </Grid>

                <Button Content="Submit Claim" Command="{Binding SubmitClaimCommand}" 
                        Margin="0,15,0,0" Padding="10" Width="200" HorizontalAlignment="Center" 
                        Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Margin="10,5,10,10">
            <TextBlock Text="Your Past Claims" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5"/>

            <DataGrid ItemsSource="{Binding PastClaims}" AutoGenerateColumns="False" 
                      IsReadOnly="True" CanUserAddRows="False" 
                      Height="350" Background="White">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClaimId}" Width="Auto"/>
                    <DataGridTextColumn Header="Month" Binding="{Binding MonthYear}" Width="100"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="Auto"/>
                    <DataGridTextColumn Header="Rate (R)" Binding="{Binding HourlyRate, StringFormat='C2'}" Width="Auto"/>
                    <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount, StringFormat='C2'}" FontWeight="Bold" Width="Auto"/>
                    <DataGridTemplateColumn Header="Status" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}" Padding="5" 
                                           Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                           Foreground="White" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>